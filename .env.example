# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_RPC_URL=https://soroban-testnet.stellar.org:443
STELLAR_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# Agent Configuration
# Generate with: stellar keys generate --global <name> --network testnet
AGENT_SECRET_KEY=
AGENT_PUBLIC_KEY=

# Smart Contract Addresses (populated after deployment)
CREDIT_SCORING_CONTRACT_ID=
LOAN_CONTRACT_ID=
ESCROW_CONTRACT_ID=

# x402 Protocol Configuration
X402_FACILITATOR_URL=https://facilitator.example.com
X402_PAYMENT_TIMEOUT_MS=30000

# x402-Flash Configuration
FLASH_CHANNEL_TIMEOUT=86400
FLASH_MIN_CHANNEL_CAPACITY=1000

# Masumi Network Configuration
MASUMI_REGISTRY_URL=https://registry.masumi.network
MASUMI_NODE_URL=https://node.masumi.network

# Sokosumi Protocol Configuration
SOKOSUMI_DISCOVERY_URL=https://discovery.sokosumi.network
SOKOSUMI_NEGOTIATION_TIMEOUT=60000

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# Testing
TEST_NETWORK=testnet
TEST_ACCOUNT_SECRET=

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
